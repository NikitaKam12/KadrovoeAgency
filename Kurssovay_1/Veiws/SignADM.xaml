<Page x:Class="Kurssovay_1.Veiws.SignADM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kurssovay_1.Veiws"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignADM">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="400" Height="350
                    " 
                    
                    >
            <TextBlock Text="Вход администратора" FontSize="20" TextAlignment="Center"/>
            <TextBlock Text="Логин" FontSize="20" />
            <TextBox Name="Login" Height="35"/>

            <TextBlock Text="Пароль" FontSize="20"/>
            <PasswordBox Name="Password" Height="35"/>

            <Button Content="Авторизация" 
                    Height="48" 
                    Margin="0,10" 
                    Click="Button_Click" 
                    FontSize="20" 
                    
                    FontFamily="Verdana" 
                    Cursor="Hand"/>


        </StackPanel>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="26,35,0,0" VerticalAlignment="Top" Width="127" Click="BtnOut_Click" Height="33"/>

    </Grid>
</Page>
